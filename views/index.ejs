h1 {
    padding-top: 50px;
    margin-top: 50px;
    font-family: Copperplate, Papyrus, fantasy;
    position: relative;
    font-size: 2rem;
    letter-spacing: 15px;
    color: #0e3742;
    width: 100%;
    text-align: left;

    outline: none;
    line-height: 1.1rem;

    -webkit-box-reflect:initial 0px linear-gradient(#00000000,#0000000c, #00000036, #000);
    animation: anime 5s linear infinite;
}

@keyframes anime {
    0%,
    4.9%,
    10%,
    20%,
    23%,
    45%,
    59%,
    70%,
    90%,
    93%
    {
        color: #0e3742;
        text-shadow: none;
    }
  
    5%,
    8%,
    15%,
    25%,
    44%,
    60%,
    71%,
    85%,
    100%
    {
        color: #fff;
        text-shadow: 
            0 0 10px #03bcf4,
            0 0 20px #03bcf4,
            0 0 40px #03bcf4,
            0 0 80px #03bcf4,
            0 0 160px #03bcf4
        ;
    }
}
